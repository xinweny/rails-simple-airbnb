<%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.input :image, label: 'Image URL' %>
  <% if @flat.id.nil? %>
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% else %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
<% end %>
